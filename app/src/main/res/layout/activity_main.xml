<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
   
    
    
    
      <TextView
        android:id="@+id/textviewid"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
                 
        android:text="@string-array/text_view"
             
        android:textColor="#008000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">        
                
                
           </TextView>
   
    
       
   


    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_card"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textviewid"
        app:layout_constraintStart_toStartOf="@+id/textviewid"
        app:layout_constraintTop_toTopOf="@+id/textviewid">

        <ImageButton
            android:id="@+id/btn_pencil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/ic_unselected_pencil" />

      
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/color_palate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_card"
        android:padding="4dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/action"
        app:layout_constraintTop_toBottomOf="@+id/action">

        <ImageButton
            android:id="@+id/btn_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/color_palette_google_blue" />

   
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="500dp">

        <com.ferodev.simplepaint.canvas.DrawPencil
            android:id="@+id/draw_pencil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

