<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
   
    
    
    
      <TextView
        android:id="@+id/textviewid"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
                 
        android:text="@string-array/text_view"
             
        android:textColor="#008000"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>        
                
    

  <Button  
        android:id="@+id/btn_arrow"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignRight="@+id/textviewid"  
        android:layout_alignParentBottom="true"  
        android:layout_alignStart="@+id/textviewid"  
        android:layout_marginBottom="53dp"  
        android:layout_marginLeft="49dp"  
        android:layout_marginStart="49dp"  
        android:text="Save" 
        app:layout_constraintStart_toEndOf="@+id/action"
        app:layout_constraintTop_toTopOf="@+id/action"/>      
      


<Button  
        android:id="@+id/btn_0"  
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
     

        android:layout_marginBottom="33dp"
        android:layout_marginEnd="33dp"  
        android:layout_marginRight="33dp"  
        android:text="0" 
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_arrow"
        app:layout_constraintBottom_toTopOf="@+id/btn_3"
         />  
    
     

<Button  
        android:id="@+id/btn_1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
     

        android:layout_marginBottom="33dp"
        android:layout_marginEnd="33dp"  
        android:layout_marginRight="33dp"  
        android:text="1" 
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_arrow"
        app:layout_constraintBottom_toTopOf="@+id/btn_4"  />  



<Button  
        android:id="@+id/btn_2"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
     

        android:layout_marginBottom="33dp"
        android:layout_marginEnd="33dp"  
        android:layout_marginRight="33dp"  
        android:text="2" 
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_arrow"
        app:layout_constraintBottom_toTopOf="@+id/btn_5"
         />  


<Button  
        android:id="@+id/btn_3"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
     

        android:layout_marginBottom="33dp"
        android:layout_marginEnd="33dp"  
        android:layout_marginRight="33dp"  
        android:text="3" 
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_arrow"
        app:layout_constraintBottom_toTopOf="@+id/btn_6"
         />  


<Button  
        android:id="@+id/btn_4"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
     

        android:layout_marginBottom="33dp"
        android:layout_marginEnd="33dp"  
        android:layout_marginRight="33dp"  
        android:text="4" 
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_arrow"
        app:layout_constraintBottom_toTopOf="@+id/btn_7"
         />  


<Button  
        android:id="@+id/btn_5"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
     

        android:layout_marginBottom="33dp"
        android:layout_marginEnd="33dp"  
        android:layout_marginRight="33dp"  
        android:text="5" 
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_arrow"
        app:layout_constraintBottom_toTopOf="@+id/btn_arrow"
         />  







    







    



         
    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:background="@drawable/background_card"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

          <ImageButton
            android:id="@+id/btn_pencil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/ic_unselected_pencil" />

    

    
           

        
    </RelativeLayout>

   
   
  



 <RelativeLayout
        android:id="@+id/pencil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/action"  >

   <my.app.canvas.DrawPencil
        android:id="@+id/draw_pencil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:visibility="visible" />
       
    <my.app.canvas.DrawLine
            android:id="@+id/draw_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


           

     

            
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

